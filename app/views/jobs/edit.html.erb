<h1>EDIT JOB POST</h1><br>

<%= form_with model: @job do |form| %>
  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
    <% @job.errors.full_messages_for(:title).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :company %><br>
    <%= form.text_field :company %><br>
    <% @job.errors.full_messages_for(:company).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :experience %><br>
    <%= form.text_field :experience %><br>
    <% @job.errors.full_messages_for(:experience).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :salary %><br>
    <%= form.text_field :salary %><br>
    <% @job.errors.full_messages_for(:salary).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
  <br>

  <div>
    <%= form.submit %>
  </div>
<% end %>